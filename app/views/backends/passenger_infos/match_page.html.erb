<form action="/backends/passenger_infos/match_send_mail" class="form-horizontal" method="post">
  <input type="text" name="passenger_info_id" value="<%=params['id']%>" hidden>
  <div class="form-group">
    <label class="col-md-2 col-lg-2 col-sm-2 control-label">姓名</label>
    <div class="col-md-9 col-lg-9 col-sm-9">
      <input type="text" class="form-control" value="<%= @passenger_info.name %>" readonly/>
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-2 col-lg-2 col-sm-2 control-label">信件內容網址</label>
    <div class="col-md-9 col-lg-9 col-sm-9">
      <input type="text" class="form-control" name="info_url"/>
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-2 col-lg-2 col-sm-2 control-label">配對擺渡人</label>
    <div class="col-md-9 col-lg-9 col-sm-9">
      <select name="ship_man_id" class="form-control">
        <%@admins.each do |admin|%>
          <option value="<%=admin.id%>"><%=admin.name%></option>
        <%end%>
      </select>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-12">
      <button class="btn btn-block btn-danger" onclick="this.disabled=true; this.value='Submitting...'; this.form.submit();">
        確認
      </button>
    </div>
  </div>
</form>