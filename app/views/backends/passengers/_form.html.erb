<div class="form-group">
  <label class="col-md-2 col-lg-2 col-sm-2 control-label">姓名</label>
  <div class="col-md-9 col-lg-9 col-sm-9">
    <input type="text" class="form-control" name="passenger[name]" value="<%= @passenger.name %>" />
  </div>
</div>
<div class="form-group">
  <label class="col-md-2 col-lg-2 col-sm-2 control-label">性別</label>
  <div class="col-md-9 col-lg-9 col-sm-9">
    <select class="form-control" name="passenger[gender]">
      <option value="女" <%if @passenger.gender == '女'%> selected <%end%> >女</option>
      <option value="男" <%if @passenger.gender == '男'%> selected <%end%> >男</option>
    </select>
  </div>
</div>
<div class="form-group">
  <label class="col-md-2 col-lg-2 col-sm-2 control-label">校系級</label>
  <div class="col-md-9 col-lg-9 col-sm-9">
    <input type="text" class="form-control" name="passenger[major]" value="<%= @passenger.major %>" />
  </div>
</div>
<div class="form-group">
  <label class="col-md-2 col-lg-2 col-sm-2 control-label">Email</label>
  <div class="col-md-9 col-lg-9 col-sm-9">
    <input type="text" class="form-control" name="passenger[email]" value="<%= @passenger.email %>" />
  </div>
</div>
<div class="form-group">
  <label class="col-md-2 col-lg-2 col-sm-2 control-label">Facebook</label>
  <div class="col-md-9 col-lg-9 col-sm-9">
    <input type="text" class="form-control" name="passenger[facebook]" value="<%= @passenger.facebook %>" />
  </div>
</div>  
<div class="form-group">
  <div class="col-lg-12">
    <button class="btn btn-block btn-danger">
      確認
    </button>
  </div>
</div>
